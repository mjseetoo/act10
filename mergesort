package act10;

import java.util.ArrayList;
import java.util.Iterator;

public class act10 {

	public ArrayList<Integer> merge(ArrayList<Integer>left ,ArrayList<Integer>right ){
		ArrayList<Integer> returnArray = new ArrayList<Integer>();
		
		int i = 0, j = 0;
		
		while(i< left.size()&&j <right.size()) {
			if(left.get(i)<=right.get(j)) {
				returnArray.add(left.get(i));
				i++;
			}
			else {
				returnArray.add(left.get(j));
				j++;
			}
			while(i<left.size()) {
				returnArray.add(left.get(i));
				i++;
			}
			while(j<right.size()) {
				returnArray.add(right.get(j));
				j++;
			}
		}
		
		/*Iterator it = left.iterator();
		while(it.hasNext()) {
			returnArray.add((Integer) it.next());
		}
		Iterator rightIt = right.iterator();
		while(rightIt.hasNext()) {
			returnArray.add((Integer) rightIt.next());
		}*/
		
		return returnArray;
		
		
	}
	public void mergeSort(ArrayList<Integer> arrList){
		int count = arrList.size();
		if (count<2) {
			return;
		}
		int mid  =count /2;
		ArrayList<Integer> left = new ArrayList<Integer>();
		ArrayList<Integer> right = new ArrayList<Integer>();
		
		Iterator it = arrList.iterator();
		int counter = 0;
		while (it.hasNext() && counter < mid) {
			left.add(arrList.get(counter));
			counter++;
		}
		while (it.hasNext()){
			right.add(arrList.get(counter));
			counter++;
		}
		mergeSort(left);
		mergeSort(right);
		
		merge(left, right);
	}
}
